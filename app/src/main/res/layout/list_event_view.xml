<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/logoplanevent" />

    <TextView
        android:id="@+id/titleListEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/darkPink"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon"
        android:layout_alignBottom="@+id/dateListEvent" />

    <TextView
        android:id="@+id/tagListEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:layout_alignBottom="@+id/icon"
        android:layout_alignLeft="@+id/titleListEvent"
        android:layout_alignStart="@+id/titleListEvent" />

    <TextView
        android:id="@+id/dateListEvent"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/titleListEvent"
        android:layout_alignStart="@+id/titleListEvent" />


    <TextView
        android:id="@+id/locationListEvent"
        android:layout_width="wrap_content"
        android:layout_gravity="left"
        android:padding="@dimen/activity_horizontal_margin"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>